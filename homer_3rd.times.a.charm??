wget http://homer.ucsd.edu/homer/configureHomer.pl

perl configureHomer.pl -install

export PATH=/home/em_b/Homer/bin:$PATH

#---note: homer currently only support mm10, not mm39!!!

perl configureHomer.pl -install mm10

#--split files for pilot
seqkit split2 -1 /home/em_b/Desktop/HiCUP/SRR21038697/SRR21038697filtered_R1.fastq.gz -2 /home/em_b/Desktop/HiCUP/SRR21038697/SRR21038697filtered_R2.fastq.gz -s 10000000 -O SRR21038697split -f -e .gz

#---trim each read file separately
homerTools trim -3 GATC -mis 0 -matchStart 20 -min 20 SRR21038697filtered_R1.part_001.fastq.gz

