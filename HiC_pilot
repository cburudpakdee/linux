#---------https://github.com/hms-dbmi/hic-data-analysis-bootcamp
#---------download data on this site
sudo apt-get install bwa
sudo apt-get install samtools
bwa mem -SP5M -t8 hg38.fasta input_R1.fastq input_R2.fastq | samtools view -bhS - > output.bam
samtools view output.bam | less -S
pip install numpy pysam cython
pip install pairtools
samtools view -h output.bam | pairtools parse -c hg38.mainonly.chrom.size -o parsed.pairsam.gz
pairtools sort --nproc 8 -o sorted.pairsam.gz parsed.pairsam.gz
gunzip -c parsed.pairsam.gz | less -S
