#---check number of bases
cat GFP.fa | grep -v "^>" | tr -d "\n" | wc -c

#---make gtf file
echo -e 'GFP\tunknown\texon\t1\t922\t.\t+\t.\tgene_id "GFP"; transcript_id "GFP"; gene_name "GFP"; gene_biotype "protein_coding";' > GFP.gtf
cat GFP.gtf 

